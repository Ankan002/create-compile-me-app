{
  "name": "create-compile-me-app",
  "version": "0.0.0",
  "description": "A CLI Tool to bootstrap your javascript/typescript projects",
  "main": "build/index.js",
  "bin": "build/index.js",
  "repository": "https://github.com/Ankan002/create-compile-me-app.git",
  "author": "Ankan Bhattacharya",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon",
    "build": "swc src -d build",
    "test": "jest --passWithNoTests",
    "test-dev": "jest --passWithNoTests --setupFiles dotenv/config",
    "prepare": "husky install",
    "lint": "eslint",
    "pre-commit": "yarn lint && yarn test-dev && yarn build",
    "post-merge": "yarn install",
    "commit-msg": "npx --no-install commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.46",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "gradient-string": "^2.0.2",
    "inquirer": "^9.1.5"
  }
}
